  if (!$VIEWS_TABLES) {
    $VIEWS_TABLES = array_merge(module_invoke_all('views_tables'), _views_internal_tables());
  }
  return $VIEWS_TABLES;
}

// filters
// name
// field (in case the array key is not the field)
// list: (if array use; otherwise it is a handler)
